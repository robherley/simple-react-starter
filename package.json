{
  "name": "simple-react-starter",
  "version": "1.0.0",
  "description": "A no-nonsense boilerplate for a react SPA.",
  "scripts": {
    "start": "NODE_ENV=production node server.js",
    "dev": "concurrently -n 'F,B' -c 'magenta,blue' 'npm run dev:frontend' 'npm run dev:backend'",
    "dev:frontend": "webpack-dev-server --mode development --hot",
    "dev:backend": "nodemon server.js --exec 'npm run lint && node'",
    "build": "npm run lint && webpack --mode production --display-error-details",
    "precommit": "lint-staged",
    "lint": "eslint ."
  },
  "engines": {
    "node": ">=9.8.0"
  },
  "keywords": [
    "react",
    "webpack",
    "babel",
    "express",
    "redux"
  ],
  "author": {
    "name": "Rob Herley",
    "email": "rherley@stevens.edu",
    "url": "https://robherley.xyz"
  },
  "license": "ISC",
  "devDependencies": {
    "@babel/core": "^7.0.0-beta.51",
    "@babel/plugin-proposal-class-properties": "^7.0.0-beta.51",
    "@babel/plugin-transform-react-constant-elements": "^7.0.0-beta.51",
    "@babel/preset-env": "^7.0.0-beta.51",
    "@babel/preset-react": "^7.0.0-beta.51",
    "babel-loader": "^8.0.0-beta.4",
    "concurrently": "^3.6.0",
    "css-loader": "^0.28.11",
    "eslint": "^4.19.1",
    "eslint-config-airbnb": "^17.0.0",
    "eslint-config-airbnb-base": "^13.0.0",
    "eslint-config-prettier": "^2.9.0",
    "eslint-loader": "^2.0.0",
    "eslint-plugin-import": "^2.13.0",
    "eslint-plugin-jsx-a11y": "^6.0.3",
    "eslint-plugin-prettier": "^2.6.1",
    "eslint-plugin-react": "^7.10.0",
    "file-loader": "^2.0.0",
    "friendly-errors-webpack-plugin": "^1.7.0",
    "html-loader": "^0.5.5",
    "html-webpack-plugin": "^3.2.0",
    "husky": "^0.14.3",
    "lint-staged": "^7.2.0",
    "node-sass": "^4.9.1",
    "nodemon": "^1.17.5",
    "prettier": "^1.13.6",
    "sass-loader": "^7.0.3",
    "style-loader": "^0.21.0",
    "webpack": "^4.12.1",
    "webpack-cli": "^2.1.5",
    "webpack-dev-server": "^3.1.4"
  },
  "dependencies": {
    "@babel/polyfill": "^7.0.0-beta.51",
    "axios": "^0.18.0",
    "babel-eslint": "^8.2.5",
    "compression": "^1.7.2",
    "express": "^4.16.3",
    "morgan": "^1.9.0",
    "react": "^16.2.0",
    "react-dom": "^16.2.0",
    "react-hot-loader": "^4.0.0"
  },
  "lint-staged": {
    "*.{js,jsx}": [
      "eslint --fix",
      "git add"
    ]
  }
}
